rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================================
    // STUDENTS ROOT
    // ============================================================
    match /students/{studentId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == studentId || request.auth.token.role == "admin");

      // Completed Courses
      match /completedCourses/{courseId} {
        allow read: if request.auth != null &&
          (request.auth.uid == studentId || request.auth.token.role == "admin");
        allow create, update, delete: if request.auth != null &&
          request.auth.uid == studentId;
      }

      // Student Custom Course Presets
      match /coursePresets/{presetId} {
        allow read, create, update, delete:
          if request.auth != null && request.auth.uid == studentId;
      }

      // Hired Teachers
      match /hiredTeachers/{teacherId} {
        allow read: if request.auth != null &&
          request.auth.uid == studentId;
        allow create, update: if request.auth != null &&
          request.auth.token.role == "admin";
        allow delete: if false;
      }
    }

    // ============================================================
    // UNIVERSITY COURSE BUILDER (Admin only)
    // ============================================================
    match /courseBuilder/{universityId}/{path=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.auth.token.role == "admin";
    }

    // ============================================================
    // PUBLISHED UNIVERSITY COURSES (Student reads)
    // ============================================================
    match /universityCourses/{universityId}/{path=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.auth.token.role == "admin";
    }

    // ============================================================
    // HIRE REQUESTS
    // ============================================================
    match /hireRequests/{requestId} {
      allow create: if request.auth != null &&
        request.auth.uid == request.resource.data.studentUid;
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.studentUid || request.auth.token.role == "admin");
      allow update: if request.auth != null &&
        (request.auth.uid == resource.data.studentUid || request.auth.token.role == "admin");
      allow delete: if false;
    }

    // ============================================================
    // TEACHERS
    // ============================================================
    match /teachers/{teacherId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null &&
        request.auth.token.role == "admin";

      // Reviews
      match /reviews/{reviewId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null &&
          exists(/databases/$(database)/documents/students/$(request.auth.uid)/hiredTeachers/$(teacherId));
        allow update: if request.auth != null &&
          request.auth.uid == resource.data.studentUid;
        allow delete: if request.auth != null &&
          (request.auth.uid == resource.data.studentUid || request.auth.token.role == "admin");
      }
    }

    // ============================================================
    // PAYMENTS
    // ============================================================
    match /payments/{paymentId} {
      allow create: if request.auth != null &&
        request.resource.data.studentUid == request.auth.uid;
      allow read: if request.auth != null &&
        (resource.data.studentUid == request.auth.uid || request.auth.token.role == "admin");
      allow update: if request.auth != null &&
        request.auth.token.role == "admin";
      allow delete: if false;
    }

    // ============================================================
    // PROFILE CHANGE REQUESTS
    // ============================================================
    match /profileChangeRequests/{requestId} {
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.uid || request.auth.token.role == "admin");
      allow create: if request.auth != null &&
        request.auth.uid == request.resource.data.uid;
      allow update: if request.auth != null &&
        request.auth.token.role == "admin";
      allow delete: if false;
    }

    // ============================================================
    // QUIZ ATTEMPTS
    // ============================================================
    match /quizAttempts/{studentId} {
      allow read: if request.auth != null &&
        (request.auth.uid == studentId || request.auth.token.role == "admin");
      allow write: if request.auth != null &&
        request.auth.uid == studentId;

      match /attempts/{attemptId} {
        allow read: if request.auth != null &&
          (request.auth.uid == studentId || request.auth.token.role == "admin");
        allow create: if request.auth != null &&
          request.auth.uid == studentId;
        allow update, delete: if false;
      }
    }

    // ============================================================
    // ADMIN NOTIFICATIONS
    // ============================================================
    match /adminNotifications/{docId} {
      allow read, write: if request.auth != null &&
        request.auth.token.role == "admin";
    }

    // ============================================================
    // STUDENT NOTIFICATIONS
    // ============================================================
    match /studentNotifications/{studentId}/messages/{messageId} {
      allow read, create: if request.auth != null &&
        (request.auth.uid == studentId || request.auth.token.role == "admin");
      allow update, delete: if false;
    }

    // ======================
    // FRIEND REQUESTS
    // ======================
    match /friendRequests/{requestId} {
      // Allow creating a friend request if:
      // - User is authenticated
      // - User is the sender
      // - Sender is not the same as receiver
      allow create: if request.auth != null &&
        request.auth.uid == request.resource.data.senderUid &&
        request.auth.uid != request.resource.data.receiverUid;

      // Allow reading a friend request if:
      // - User is authenticated
      // - User is either the sender or receiver
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.senderUid ||
         request.auth.uid == resource.data.receiverUid);

      // Allow updating a friend request if:
      // - User is authenticated
      // - User is the receiver (to accept/reject)
      // - Only status and respondedAt fields are being updated
      allow update: if request.auth != null &&
        request.auth.uid == resource.data.receiverUid &&
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'respondedAt']));

      // Allow deleting a friend request if:
      // - User is authenticated
      // - User is the sender (to cancel) or receiver (to reject)
      // - Request is still pending (can't cancel accepted/rejected requests)
      allow delete: if request.auth != null &&
        (request.auth.uid == resource.data.senderUid || 
         request.auth.uid == resource.data.receiverUid) &&
        resource.data.status == "pending";
    }

    // ======================
    // FRIENDSHIPS
    // ======================
    match /users/{userId}/friends/{friendId} {
      // Allow reading if user is authenticated
      allow read: if request.auth != null;
      
      // Allow creating/updating if:
      // - User is authenticated
      // - User is the owner of the document (userId)
      // - Only specific fields are being set/updated
      allow create, update: if 
        request.auth != null &&
        request.auth.uid == userId &&
        request.resource.data.diff(resource == null ? request.resource.data : resource.data).affectedKeys().hasOnly(['uid', 'since', 'status']);
      
      // Allow deleting if:
      // - User is authenticated
      // - User is the owner of the document (userId)
      allow delete: if 
        request.auth != null &&
        request.auth.uid == userId;
    }

    // ============================================================
    // CHAT SYSTEM
    // ============================================================
    match /messages/{chatId}/chats/{messageId} {
      allow create: if request.auth != null &&
        request.auth.uid == request.resource.data.senderUid &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)/friends/$(request.resource.data.receiverUid));
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.senderUid || request.auth.uid == resource.data.receiverUid);
      allow delete: if request.auth != null &&
        request.auth.uid == resource.data.senderUid;
      allow update: if false;
    }

    // ============================================================
    // CAREER GUIDANCE
    // ============================================================
    match /careerGuidance/{userId} {
      allow read, write: if request.auth != null &&
        request.auth.uid == userId;

      match /{sub=**} {
        allow read, write: if request.auth != null &&
          request.auth.uid == userId;
      }
    }

    // ============================================================
    // USERS ROOT
    // ============================================================
    match /users/{userId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == userId || request.auth.token.role == "admin");

      match /{sub=**} {
        allow read, write: if request.auth != null &&
          (request.auth.uid == userId || request.auth.token.role == "admin");
      }
    }

    // ============================================================
    // DEFAULT SAFE FALLBACK
    // ============================================================
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.auth.token.role == "admin";
    }
  }
}
